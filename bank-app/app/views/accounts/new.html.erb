<h1>Create new account</h1>

<%= form_for @account, url: customer_accounts_path do |a| %>
    <div class="form-group">
        <%= a.label :description %>
        <%= a.text_field :description, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
        <%= a.label :balance %>
        <%= a.number_field :balance, class: "form-control" %>
    </div>
    <%= a.submit "Open Account", class: "btn btn-success" %>
<% end %>