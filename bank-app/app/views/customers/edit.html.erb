<h1>Update your details here</h1>

<%= form_for(@customer) do |c| %>
    <div class="form-group">
      <%= c.label :first_name, "First Name" %>
      <%= c.text_field :first_name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :last_name, "Last Name" %>
      <%= c.text_field :last_name, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :tfn, "Tax File Number" %>
      <%= c.number_field :tfn, required: true, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= c.label :bank_id, "Which bank?" %>
      <%= c.collection_select(:bank_id, Bank.all, :id, :name, class: "form-control") %>
    </div>
    <%= c.submit("Update" ,class: "btn btn-default") %>
<% end %>