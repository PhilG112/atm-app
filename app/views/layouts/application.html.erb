<!DOCTYPE html>
<html>
  <head>
    <title>BankApp</title>
    <%= csrf_meta_tags %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
          </button>
          <% if(@current_user) %>
            <%= link_to("Your Profile", customer_path(@current_user), class: "navbar-brand") %>
          <% else %>
            <%= link_to("Banking App", root_path, class: "navbar-brand") %>
          <% end %>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <% if(@current_user) %>
              <li><%= link_to(@current_user.email, customer_path(@current_user)) %></li>
              <li><%= link_to("Logout", "/logout", method: :delete) %></li>
            <% else %>
              <li><%= link_to("Login", "/login") %></li>
              <li><%= link_to("Sign Up", "/register") %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <main class="container-fluid">
      <%= yield %>
    </main>

    <div class="error-messages">
      <p class="text-danger"><%= flash[:error] %></p>
      <p class="text-success"><%= flash[:successful_transaction] %></p>
      <p class="text-danger"><%= flash[:failed_transaction] %></p>
    </div>

  <scriptsrc="https://code.jquery.com/jquery-3.2.1.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
