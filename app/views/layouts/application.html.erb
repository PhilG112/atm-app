<!DOCTYPE html>
<html>
  <head>
    <title>BankApp</title>
    <%= csrf_meta_tags %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
  <body>

  <div class="container">
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <% if(@current_user) %>
            <%= link_to("Your Profile", customer_path(@current_user), class: "navbar-brand") %>
          <% else %>
            <%= link_to("Banking App", root_path, class: "navbar-brand") %>
          <% end %>
        </div>
        <ul class="nav navbar-nav navbar-right">
          <% if(@current_user) %>
            <li><%= link_to(@current_user.email, customer_path(@current_user)) %></li>
            <li><%= link_to("Logout", "/logout", method: :delete) %></li>
          <% else %>
            <li><%= link_to("Login", "/login") %></li>
            <li><%= link_to("Sign Up", "/register") %></li>
          <% end %>
        </ul>
      </div>
    </nav>

    <main>
      <div class="text-danger"><%= flash[:error] %></div>
      <%= yield %>
    </main>

  </div>

  </body>
</html>
