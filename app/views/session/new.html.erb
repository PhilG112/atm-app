<h1>Login</h1>

<% if(flash[:login_error]) %>
    <p class="text-danger"><%= flash[:login_error] %></p>
<% end %>

<%= form_tag("/login") do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email%>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password%>
    </div>
    <%= submit_tag "Login" %>
<% end %>