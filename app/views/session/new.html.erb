<h1>Login</h1>
<div class="login">
  <%= form_tag("/login") do %>
      <div class="form-group">
        <%= label_tag "Email" %>
        <%= email_field_tag :email, '', class: "form-control" %>
      </div>
      <div class="form-group">
        <%= label_tag "Password" %>
        <%= password_field_tag :password, '',class: "form-control"%>
      </div>
      <%= submit_tag "Login" %>
  <% end %>

  <% if(flash[:login_error]) %>
      <p class="text-danger"><%= flash[:login_error] %></p>
  <% end %>
</div>