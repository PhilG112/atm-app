<h1>Account: <%= @account.account_number %></h1>
<p>Your account balance: <b>$<%= @account.balance %></b></p>
<p>Account description: <%= @account.description %></p>
<%= link_to("Edit Account", edit_customer_account_path(@account.customer.id, @account.id), class: "btn btn-default")%>
<%= link_to("View Transactions", customer_transaction_path(@current_user.id, @account.id), class: "btn btn-default")%>
<%= link_to("Close Account", customer_account_path, method: :delete, class: "btn btn-danger")%>


